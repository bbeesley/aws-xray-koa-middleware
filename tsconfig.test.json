{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "target": "ESNext",
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "resolveJsonModule": true
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/*.js", "src/**/*.js", "*.d.ts"],
  "exclude": ["node_modules/*"]
}
